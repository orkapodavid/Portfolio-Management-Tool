<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <!-- Proxy API/Websocket requests to Backend (8000) -->
                <!-- We match against paths starting with reserved Reflex prefixes (relative to app root /pmt) -->
                
                <!-- WebSocket-specific rule for Reflex events (must come first) -->
                <rule name="ReflexWebSocket" stopProcessing="true">
                    <match url="^_event(.*)" />
                    <conditions>
                        <add input="{HTTP_UPGRADE}" pattern="websocket" />
                    </conditions>
                    <action type="Rewrite" url="ws://localhost:8000/_event{R:1}" />
                </rule>
                
                <!-- HTTP requests to backend (non-WebSocket) -->
                <rule name="ReflexBackendProxy" stopProcessing="true">
                    <match url="^(_event|_upload|ping|_image)(.*)" />
                    <conditions>
                        <add input="{HTTP_UPGRADE}" pattern="websocket" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="http://localhost:8000/{R:0}" />
                </rule>

                <!-- Serve Static Files (Default behavior) -->
                <!-- If file exists, IIS serves it. If not, fallback to index.html for SPA routing -->
                <rule name="SPA Fallback" stopProcessing="true">
                    <match url=".*" />
                    <conditions logicalGrouping="MatchAll">
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                        <!-- Don't rewrite backend requests if they slipped through (unlikely due to stopProcessing above) -->
                        <add input="{R:0}" pattern="^(_event|_upload|ping|_image)" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="index.html" />
                </rule>
            </rules>
        </rewrite>
        <staticContent>
            <!-- Remove first to avoid duplicate MIME type errors -->
            <remove fileExtension=".json" />
            <mimeMap fileExtension=".json" mimeType="application/json" />
            <remove fileExtension=".woff" />
            <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
            <remove fileExtension=".woff2" />
            <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
        </staticContent>
        <webSocket enabled="true" />
        
        <!-- Security headers -->
        <httpProtocol>
            <customHeaders>
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="X-XSS-Protection" value="1; mode=block" />
            </customHeaders>
        </httpProtocol>
    </system.webServer>
</configuration>
