# Database Configuration
DB_SERVER=your_server_name.database.windows.net
DB_NAME=portfolio_management
DB_USERNAME=your_username
DB_PASSWORD=your_secure_password
DB_DRIVER=ODBC Driver 17 for SQL Server
DB_CONNECTION_TIMEOUT=30

# Bloomberg Configuration (Optional - set BBG_EMSX_ENABLED=true to enable)
BBG_HOST=localhost
BBG_PORT=8194
BBG_EMSX_ENABLED=false

# Application Settings
LOG_LEVEL=INFO
LOG_PATH=./logs
ENVIRONMENT=development

# API Keys (if using external market data providers)
MARKET_DATA_API_KEY=your_api_key_here

# Reflex Configuration (optional overrides)
REFLEX_FRONTEND_PORT=3001
REFLEX_BACKEND_PORT=8000
